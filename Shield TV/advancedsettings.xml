<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<advancedsettings>

  <video>
    <excludefromlisting>
      <regexp>[-\._ ](trailer)[-\._ ]</regexp>
      <regexp>#recycle</regexp>
      <regexp>@eaDir</regexp>
      <regexp>@EADIR</regexp>
    </excludefromlisting>
    <excludetvshowsfromscan>
      <regexp>#recycle</regexp>
      <regexp>@eaDir</regexp>
      <regexp>@EADIR</regexp>
    </excludetvshowsfromscan>
    <enablehighqualityhwscalers>true</enablehighqualityhwscalers>
  </video>

  <videolibrary>
    <cleanonupdate>true</cleanonupdate>
    <hideallitems>true</hideallitems>
    <hideemptyseries>true</hideemptyseries>
  </videolibrary>

  <!--General settings-->
  <fanartres>2160</fanartres>
  <imageres>2160</imageres>
  <imagescalingalgorithm>lanczos</imagescalingalgorithm>
  <splash>no</splash>
  <disableminimize>true</disableminimize>

</advancedsettings>
