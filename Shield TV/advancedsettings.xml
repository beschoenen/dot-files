<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<advancedsettings>

  <video>
    <excludefromlisting>
      <regexp>[-\._ ](trailer)[-\._ ]</regexp>
      <regexp>#recycle</regexp>
      <regexp>@eaDir</regexp>
      <regexp>@EADIR</regexp>
    </excludefromlisting>
    <excludetvshowsfromscan>
      <regexp>#recycle</regexp>
      <regexp>@eaDir</regexp>
      <regexp>@EADIR</regexp>
    </excludetvshowsfromscan>
    <enablehighqualityhwscalers>true</enablehighqualityhwscalers>
  </video>

  <music>
    <excludefromlisting>
      <regexp>#recycle</regexp>
      <regexp>@eaDir</regexp>
      <regexp>@EADIR</regexp>
    </excludefromlisting>
    <exludefromscan>
      <regexp>#recycle</regexp>
      <regexp>@eaDir</regexp>
      <regexp>@EADIR</regexp>
    </exludefromscan>
  </music>

  <!--General settings-->
  <fanart>
    <add>artist.*</add>
  </fanart>
  <fanartres>2160</fanartres>
  <imageres>2160</imageres>
  <imagescalingalgorithm>lanczos</imagescalingalgorithm>
  <disableminimize>true</disableminimize>

</advancedsettings>
